{
  "name": "monolith",
  "version": "1.1.0",
  "description": "Website for the Monolith CSS Framework.",
  "main": "dist/js/monolith.js",
  "author": "George Treviranus",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "nyc mocha -r babel-register -r ./config/testHelpers.js --recursive ./src/**/*.spec.js",
    "test:w": "mocha --watch -r babel-register -r ./config/testHelpers.js --recursive ./src/**/*.spec.js",
    "build": "yarn prepublish && webpack --config ./config/webpack.prod.js --progress",
    "start": "webpack-dev-server --config ./config/webpack.dev.js --progress --open",
    "watch:css": "sass --watch framework/scss/monolith.scss:dist/css/monolith.css",

    "clean": "rm -rf dist/ && mkdir dist/ && mkdir dist/css && mkdir dist/scss/ && mkdir dist/js/",
    "build:css": "sass framework/scss/monolith.scss:dist/css/monolith.css",
    "pack:scss": "cp -a framework/scss/. dist/scss/",
    "prepublish:scss": "cd framework/scss/ && zip -r ../../dist/monolith-scss.zip .",
    "prepublish:css": "cd dist/css/ && zip -r ../monolith-css.zip .",
    "prepublish:styles": "yarn build:css && yarn pack:scss && yarn prepublish:scss && yarn prepublish:css",
    "prepublish": "yarn clean && yarn prepublish:styles",
    "publish": "npm publish"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-webpack-aliases": "^1.1.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chai-enzyme": "^1.0.0-beta.0",
    "chai-spies": "^1.0.0",
    "cheerio": "^1.0.0-rc.2",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.18",
    "compression-webpack-plugin": "^1.1.11",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.2",
    "express-static-gzip": "^0.3.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.4",
    "html-webpack-plugin": "^3.1.0",
    "jsdom": "^11.5.1",
    "markdown-loader": "^2.0.2",
    "mocha": "^5.0.5",
    "monolith-css": "^1.1.7",
    "node-sass": "^4.7.2",
    "nyc": "^11.3.0",
    "postcss-loader": "^2.0.9",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-feather": "^1.0.8",
    "react-markdown": "^3.1.4",
    "react-router-dom": "^4.2.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.3",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/monolith-site.git"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      [
        "babel-plugin-webpack-aliases",
        {
          "config": "./config/webpack.dev.js"
        }
      ]
    ]
  }
}
