{
  "name": "getmonolith",
  "version": "2.0.0",
  "description": "Monolith Front-End Framework and Website",
  "main": "framework/js/dist/monolith.js",
  "author": "George Treviranus",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "nyc mocha -r babel-register -r config/testHelpers.js --recursive src/**/*.spec.js",
    "test:w": "mocha --watch -r babel-register -r config/testHelpers.js --recursive src/**/*.spec.js",
    "build": "webpack --config config/webpack.prod.js --progress",
    "watch": "yarn build:js && webpack-dev-server --config config/webpack.dev.js --progress --open",
    "lint": "prettier --write 'src/**/*.js' && prettier --write 'src/**/*.scss'",
    "build:js": "yarn compile:js && babel framework/js/src/ --out-dir framework/js/dist/",
    "compile:js": "BABEL_ENV=rollup rollup -c config/rollup.config.js",
    "watch:js": "babel framework/src/js/ --watch --out-dir framework/js/dist/",
    "prepublish:js": "yarn build:js && cd framework/js/dist/ && zip -r ../../../dist/monolith.modules.js.zip . && yarn pack:js",
    "pack:js": "cd dist/ && zip -r monolith.bundle.js.zip . -x *.css *.zip *.css.map",
    "lint:js": "prettier --write 'framework/js/src/**/*.js'",
    "build:minified:css": "sass framework/scss/monolith.scss:dist/monolith.min.css --style compressed",
    "build:css": "sass framework/scss/monolith.scss:dist/monolith.css",
    "build:css:all": "yarn build:css && yarn build:minified:css",
    "lint:scss": "prettier --write 'framework/scss/**/*.scss'",
    "prepublish:scss": "cd framework/scss/ && zip -r ../../dist/monolith.scss.zip .",
    "prepublish:css": "yarn build:css:all && cd dist/ && zip -r monolith.css.zip . -x *.js *.zip *.js.map",
    "clean": "rm -rf dist/ && mkdir dist/",
    "build:development": "yarn clean && yarn build:lint && yarn build:js && yarn build:css:all",
    "build:lint": "yarn lint:js && yarn lint:scss",
    "build:release": "yarn clean && yarn build:lint && yarn prepublish:scss && yarn prepublish:css && yarn prepublish:js"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-webpack-aliases": "^1.1.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chai-enzyme": "^1.0.0-beta.0",
    "chai-spies": "^1.0.0",
    "cheerio": "^1.0.0-rc.2",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.18",
    "compression-webpack-plugin": "^1.1.11",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.2",
    "express-static-gzip": "^0.3.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.4",
    "html-webpack-plugin": "^3.1.0",
    "jsdom": "^11.5.1",
    "markdown-loader": "^2.0.2",
    "mocha": "^5.0.5",
    "node-sass": "^4.7.2",
    "nyc": "^11.3.0",
    "postcss-loader": "^2.0.9",
    "prettier": "^1.12.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-feather": "^1.0.8",
    "react-markdown": "^3.1.4",
    "react-router-dom": "^4.2.2",
    "resolve-url-loader": "^2.3.0",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-node-resolve": "^3.3.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.3",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/getmonolith.io.git"
  }
}
